<div>
  <%= form_with model: @user, url: login_path do |f| %>
    <div>
      <%= f.label :rfc, 'RFC' %>
      <%= f.text_field :rfc, placeholder: 'RFC' %>
    </div>
    <div>
      <%= f.label :password, 'Contraseña' %>
      <%= f.text_field :password, placeholder: 'Contraseña' %>
    </div>
    <%= f.submit "Iniciar seción" %>
  <% end  %>

  <div>
    <%= link_to "Crear una cuenta", "#" %>
  </div>
</div>